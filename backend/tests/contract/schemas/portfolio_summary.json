{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "total_value",
    "cash",
    "buying_power",
    "total_pl",
    "total_pl_percent",
    "day_pl",
    "day_pl_percent",
    "num_positions",
    "num_winning",
    "num_losing"
  ],
  "properties": {
    "total_value": {
      "type": "number",
      "minimum": 0
    },
    "cash": {
      "type": "number",
      "minimum": 0
    },
    "buying_power": {
      "type": "number",
      "minimum": 0
    },
    "total_pl": {
      "type": "number"
    },
    "total_pl_percent": {
      "type": "number"
    },
    "day_pl": {
      "type": "number"
    },
    "day_pl_percent": {
      "type": "number"
    },
    "num_positions": {
      "type": "integer",
      "minimum": 0
    },
    "num_winning": {
      "type": "integer",
      "minimum": 0
    },
    "num_losing": {
      "type": "integer",
      "minimum": 0
    },
    "largest_winner": {
      "type": ["object", "null"],
      "properties": {
        "symbol": { "type": "string" },
        "pl": { "type": "number" },
        "pl_percent": { "type": "number" }
      }
    },
    "largest_loser": {
      "type": ["object", "null"],
      "properties": {
        "symbol": { "type": "string" },
        "pl": { "type": "number" },
        "pl_percent": { "type": "number" }
      }
    }
  }
}
