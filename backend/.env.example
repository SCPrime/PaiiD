# PaiiD Backend - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files with real credentials!

# API Security
API_TOKEN=your-secure-api-token-here

# Alpaca API (Paper Trading Execution ONLY)
ALPACA_PAPER_API_KEY=your-alpaca-paper-api-key
ALPACA_PAPER_SECRET_KEY=your-alpaca-paper-secret-key

# Tradier API (Market Data, News, Quotes - ALL market intelligence)
TRADIER_API_KEY=your-tradier-api-key
TRADIER_ACCOUNT_ID=your-tradier-account-id
TRADIER_API_BASE_URL=https://api.tradier.com/v1
TRADIER_USE_SANDBOX=false

# Anthropic API (AI Features)
ANTHROPIC_API_KEY=your-anthropic-api-key

# CORS Configuration
ALLOW_ORIGIN=http://localhost:3000

# Trading Configuration
LIVE_TRADING=false
TESTING=false
TRADING_MODE=paper
SUPERVISOR_MODE=suggest

# Internal PyPI Mirror (Optional - for security auditing)
# Uncomment and configure if using internal mirror for pip-audit
# PIP_INDEX_URL=http://localhost:8080/
# PIP_TRUSTED_HOST=localhost
# PYPI_MIRROR_ENABLED=false

# Database (Phase 2.5)
# DATABASE_URL=postgresql://user:password@localhost:5432/paiid

# Redis (Phase 2.5)
# REDIS_URL=redis://localhost:6379/0

# Sentry Error Tracking (Phase 2.5)
# SENTRY_DSN=https://your-sentry-dsn-here

# JWT Authentication (Week 2-4: Multi-User System)
JWT_SECRET_KEY=generate-a-secure-random-string-here-NEVER-use-default-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Risk Management
MAX_POSITIONS=5
POSITION_SIZE=0.02
STOP_LOSS_PCT=0.02
TAKE_PROFIT_PCT=0.04
MAX_DAILY_TRADES=20
MAX_POSITION_SIZE=100
MAX_DAILY_LOSS=25
MAX_TRADES_PER_DAY=10
MAX_PORTFOLIO_RISK=0.10
REQUIRE_CONFIRMATION=true

# AI Configuration
AI_MODEL=claude-3-sonnet-20240229
USE_AI_ANALYSIS=true

# News API Keys (Optional)
# ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key
# POLYGON_API_KEY=your-polygon-key
# FINNHUB_API_KEY=your-finnhub-key

# Idempotency
IDMP_TTL_SECONDS=600

# Instructions:
# 1. Copy this file: cp .env.example .env
# 2. Fill in your actual API keys and secrets
# 3. Never commit .env file to version control
# 4. For production, use your hosting platform's secret management
