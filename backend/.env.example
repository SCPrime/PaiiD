# ====================================
# PaiiD Backend Environment Variables
# ====================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control
# See docs/SECRETS.md for complete secret management guide

# =====================================
# REQUIRED SECRETS - Must be configured
# =====================================

# Backend API Authentication Token
# CRITICAL: Generate a secure random token - this protects all API endpoints
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_TOKEN=

# Tradier API Credentials (Market Data Provider)
# Get keys from: https://developer.tradier.com
# Used for: Real-time quotes, historical data, options chains, market news
TRADIER_API_KEY=
TRADIER_ACCOUNT_ID=
TRADIER_API_BASE_URL=https://api.tradier.com/v1

# Alpaca Paper Trading API (Trade Execution ONLY)
# Get keys from: https://app.alpaca.markets/paper/dashboard/overview
# Used for: Paper trading orders, positions, account balance
ALPACA_PAPER_API_KEY=
ALPACA_PAPER_SECRET_KEY=

# Database Connection (PostgreSQL for Production)
# Format: postgresql://username:password@host:port/database
# For local development: postgresql://postgres:postgres@localhost:5432/paiid
# For Render: Use the DATABASE_URL environment variable from Render
DATABASE_URL=

# JWT Secret Key (Multi-User Authentication)
# CRITICAL: Must be cryptographically secure random value in production
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# WARNING: Changing this invalidates all existing user sessions
JWT_SECRET_KEY=

# =====================================
# OPTIONAL SECRETS - Enhance functionality
# =====================================

# Anthropic AI API (AI-powered recommendations and chat)
# Get key from: https://console.anthropic.com/
# Optional but recommended for AI features
ANTHROPIC_API_KEY=

# GitHub Webhook Secret (Repository Monitor)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
# Only needed if using GitHub repository monitoring
GITHUB_WEBHOOK_SECRET=

# Redis Cache (Performance Optimization)
# Format: redis://[[username]:[password]@]host:port[/database]
# For local: redis://localhost:6379
# For Render: Use the REDIS_URL environment variable from Render
# Optional - uses in-memory cache if not configured
REDIS_URL=

# Sentry Error Tracking (Production Monitoring)
# Get DSN from: https://sentry.io/
# Highly recommended for production deployments
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# =====================================
# CONFIGURATION (Non-Secret Settings)
# =====================================

# CORS Configuration
ALLOW_ORIGIN=http://localhost:3000

# Trading Mode (DO NOT enable live trading until thoroughly tested)
LIVE_TRADING=false

# Logging Configuration
LOG_LEVEL=INFO

# Testing Configuration
TESTING=false
USE_TEST_FIXTURES=false

# Idempotency Configuration
IDMP_TTL_SECONDS=600

# =====================================
# SECURITY NOTES
# =====================================
# 1. NEVER commit .env file to version control
# 2. Rotate secrets regularly (every 90 days minimum)
# 3. Use different secrets for development, staging, and production
# 4. Store production secrets in secure secret managers (Render env vars, AWS Secrets Manager, etc.)
# 5. Audit secret access logs regularly
# 6. Use read-only API keys where possible
# 7. Enable 2FA on all API provider accounts

# =====================================
# SECRET GENERATION COMMANDS
# =====================================
# API_TOKEN:        python -c "import secrets; print(secrets.token_urlsafe(32))"
# JWT_SECRET_KEY:   python -c "import secrets; print(secrets.token_urlsafe(32))"
# GITHUB_SECRET:    python -c "import secrets; print(secrets.token_hex(32))"

# =====================================
# WHERE TO GET API KEYS
# =====================================
# Tradier:    https://developer.tradier.com (Free tier available)
# Alpaca:     https://app.alpaca.markets/paper/dashboard/overview (Free paper trading)
# Anthropic:  https://console.anthropic.com/ (Pay-as-you-go)
# Sentry:     https://sentry.io/ (Free tier available)
# Redis:      https://redis.com/try-free/ or use Render Redis addon
