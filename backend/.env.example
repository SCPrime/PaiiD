# ====================================
# PaiiD Backend Environment Variables
# ====================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ================
# REQUIRED SECRETS
# ================

# Backend API Authentication Token (generate a secure random string)
API_TOKEN=your_api_token_here

# Tradier API (market data provider)
TRADIER_API_KEY=your_tradier_api_key_here
TRADIER_ACCOUNT_ID=your_tradier_account_id_here
TRADIER_API_BASE_URL=https://api.tradier.com/v1

# Alpaca Paper Trading API (for trade execution)
ALPACA_PAPER_API_KEY=your_alpaca_paper_api_key_here
ALPACA_PAPER_SECRET_KEY=your_alpaca_paper_secret_key_here

# Anthropic AI API (for Claude AI recommendations)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database Connection
DATABASE_URL=postgresql://user:password@host:port/database

# ================
# OPTIONAL SECRETS
# ================

# News Providers (at least one recommended)
FINNHUB_API_KEY=your_finnhub_api_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
POLYGON_API_KEY=your_polygon_api_key_here

# Redis Cache (improves performance, not required)
REDIS_URL=redis://localhost:6379

# ================
# CONFIGURATION
# ================

# Server Configuration
PORT=8001
ALLOW_ORIGIN=http://localhost:3000

# ================
# NOTES
# ================
# 1. Generate API_TOKEN with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# 2. Get Tradier API key from: https://developer.tradier.com
# 3. Get Alpaca Paper Trading keys from: https://app.alpaca.markets/paper/dashboard/overview
# 4. Get Anthropic API key from: https://console.anthropic.com/
# 5. Optional news provider keys improve data quality but are not required
