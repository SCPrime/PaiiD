#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# ====================================
# PAIID PRE-COMMIT VALIDATION PIPELINE
# ====================================
# This hook prevents broken code from being committed
# It runs automatically before every git commit

echo "ğŸ” Running pre-commit validation..."

# ====================================
# FRONTEND VALIDATION
# ====================================

echo "ğŸ“¦ Frontend: Running lint-staged..."
cd frontend && npx lint-staged
if [ $? -ne 0 ]; then
  echo "âŒ Frontend lint-staged failed!"
  exit 1
fi

echo "ğŸ”§ Frontend: Type checking..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "âŒ Frontend type-check failed! Fix TypeScript errors before committing."
  exit 1
fi

# ====================================
# BACKEND VALIDATION
# ====================================

echo "ğŸ Backend: Running Ruff linter..."
cd ../backend
ruff check . --fix
if [ $? -ne 0 ]; then
  echo "âŒ Backend Ruff linting failed! Fix Python errors before committing."
  exit 1
fi

echo "ğŸ¨ Backend: Running Ruff formatter..."
ruff format .
if [ $? -ne 0 ]; then
  echo "âŒ Backend Ruff formatting failed!"
  exit 1
fi

# ====================================
# SUCCESS
# ====================================

echo "âœ… All pre-commit checks passed!"
exit 0
