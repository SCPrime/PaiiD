  "deployment_patterns": {
    "full_stack_validation": {
      "command": "modsquad.deploy_full_stack()",
      "squads": ["bravo", "charlie", "delta", "echo"],
      "use_case": "Pre-deployment, nightly builds"
    },
    "pre_commit": {
      "command": "modsquad.squads.bravo.quick_check()",
      "squads": ["bravo"],
      "use_case": "Git pre-commit hook"
    },
    "pre_deploy_check": {
      "command": "modsquad.pre_deploy_check()",
      "squads": ["bravo", "charlie"],
      "use_case": "Go/no-go decision"
    },
    "security_audit": {
      "command": "modsquad.squads.charlie.scan()",
      "squads": ["charlie"],
      "use_case": "Daily security scan"
    },
    "parallel_batch_execution": {
      "command": "modsquad.squads.sun_tzu.plan(tasks) -> modsquad.squads.armani.weave(batch_plan, results)",
      "squads": ["sun_tzu", "armani"],
      "use_case": "Optimize large multi-task changes for parallel execution",
      "flow": "SUN TZU plans batches → Execute batches in parallel → ARMANI weaves intersections",
      "example": "Adding 10 new guardrail extensions across 5 squads"
    }
  },

